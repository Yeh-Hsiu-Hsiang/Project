<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clothes">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 存取權限 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 精準位置(GPS) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 約略位置(WIFI) -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMAND" />
    <!-- 行事曆更改權限 -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.example.viewclothes.viewclothes"></activity>
        <activity android:name=".editclothes" />
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.weather.weather"
            android:label="@string/天氣詳細" />
        <activity
            android:name="com.example.calendar.CalendarView"
            android:label="@string/新增活動" />
        <activity
            android:name=".setting"
            android:label="@string/其他設定" />
        <activity android:name=".AddClothes" />
        <activity android:name=".Manageclothes" />
        <activity android:name=".newclothes" />
        <activity android:name="com.example.calendar.AddSchedule" />
    </application>

</manifest>
