<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.calendar.Calendar" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/bar_background"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/title_home_btn"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="toHome"
            android:visibility="visible"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_home_btn" />

        <ImageView
            android:id="@+id/title_city_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="-100dp"
            android:src="@drawable/titleaddschedule"/>

        <ImageButton
            android:id="@+id/title_update_btn"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@null"
            android:onClick="reLoad"
            android:visibility="visible"
            android:src="@drawable/reload" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:orientation="vertical"
        android:layout_marginTop="45dp">

        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusedMonthDateColor="#3799FF"
            android:selectedWeekBackgroundColor="#CCCCCC"
            android:visibility="visible" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/Addclothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add"
        android:onClick="AddEvent"/>

</android.support.constraint.ConstraintLayout>
