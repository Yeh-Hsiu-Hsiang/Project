<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/bar_background"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/title_home_btn"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="toHome"
            android:visibility="visible"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_home_btn" />

        <ImageView
            android:id="@+id/title_city_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="-100dp"
            android:src="@drawable/titleweather"/>

        <ImageButton
            android:id="@+id/title_update_btn"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@null"
            android:onClick="reLoad"
            android:visibility="visible"
            android:src="@drawable/reload" />
    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:spinnerMode="dialog"
        android:background="@null"
        android:textColor="#ffffffff"
        android:textSize="22.0sp"/>

    <TextView
        android:id="@+id/City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/spinner"
        android:layout_centerHorizontal="true"
        android:textColor="@color/darkTheme_colorAccent"
        android:textSize="22.0sp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="390dp"
        android:layout_height="100dp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="weather"
        android:textColor="@color/colorPrimary"
        android:textIsSelectable="true"
        android:textSize="22.0sp" />

</RelativeLayout>