<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #EEECE6"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/bar_background"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/title_home_btn"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:scaleType="fitCenter"
            android:background="@null"
            android:onClick="toHome"
            android:visibility="visible"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dip"
            android:layout_height="40dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_home_btn" />

        <ImageView
            android:id="@+id/title_city_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="100dip"
            android:layout_toRightOf="@id/city_seperator"
            android:src="@drawable/title" />

        <ImageButton
            android:id="@+id/title_update_btn"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@null"
            android:onClick="reLoad"
            android:visibility="visible"
            android:src="@drawable/reload" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_below="@+id/title">

        <ImageView
            android:id="@+id/circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-230dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/circle" />

        <TextView
            android:id="@+id/CityOf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CITY OF"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/CityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CITY"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/CityOf"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="week"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/CityName"
            android:gravity="center_vertical"/>
        <TextClock
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/week"
            android:format12Hour="MM / dd, yyyy"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="°C"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/date"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/text_Manageclothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="衣服管理"
            android:layout_toRightOf="@+id/Manageclothes"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/Manageclothes"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@null"
            android:onClick="Manageclothes"
            android:scaleType="centerCrop"
            android:src="@drawable/wear"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="100dp" />

        <TextView
            android:id="@+id/text_View_wearing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="預覽穿衣"
            android:layout_toRightOf="@+id/View_wearing"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/View_wearing"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/Manageclothes"
            android:layout_toRightOf="@+id/Manageclothes"
            android:background="@null"
            android:onClick="View_wearing"
            android:scaleType="centerCrop"
            android:src="@drawable/browse"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/text_AddSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增活動"
            android:layout_toRightOf="@+id/Calendar"
            android:layout_marginTop="305dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/Calendar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/View_wearing"
            android:layout_toRightOf="@+id/View_wearing"
            android:background="@null"
            android:onClick="Calendar"
            android:scaleType="centerCrop"
            android:src="@drawable/calendar"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="-15dp"/>

        <TextView
            android:id="@+id/text_Weekweather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一周天氣"
            android:layout_toRightOf="@+id/Weekweather"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/Weekweather"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/Calendar"
            android:layout_toRightOf="@+id/Calendar"
            android:background="@null"
            android:onClick="Weekweather"
            android:scaleType="centerCrop"
            android:src="@drawable/weather"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="-60dp"/>

        <TextView
            android:id="@+id/text_Mysetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他設定"
            android:layout_toRightOf="@+id/Mysetting"
            android:layout_marginTop="496dp"
            android:layout_marginLeft="-50dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/Mysetting"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/Weekweather"
            android:layout_toLeftOf="@+id/Weekweather"
            android:background="@null"
            android:onClick="Mysetting"
            android:scaleType="centerCrop"
            android:src="@drawable/tool"
            android:layout_marginTop="40dp"
            android:layout_marginRight="60dp"/>
    </RelativeLayout>

</RelativeLayout>
